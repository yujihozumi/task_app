<h2>スケジュール詳細</h2>

<table>
  <tr>
    <th>タイトル</th>
    <td><%= @post.title%></td>
  </tr>
  <tr>
    <th>開始日</th>
    <td><%= @post.start_at%></td>
  </tr>
  <tr>
    <th>投稿日時</th>
    <td><%= @post.updated_at.to_s(:datetime_jp)%></td>
  </tr>
  <tr>
    <th>終日</th>
    <td><%= @post.allday%></td>
  </tr>
  <tr>
    <th>スケジュールメモ</th>
    <td><%= @post.postmemo%></td>
  </tr>
</table>

<div>
  <ul>
    <li><%= link_to "スケジュール一覧に戻る", :posts %></li>
  </ul>
</div>
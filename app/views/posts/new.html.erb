<h2>スケジュール新規作成</h2>

<%= form_for @post do |f|%>
  <table>
    <tr>
      <th><%= f.label :title ,"タイトル" %></th>
      <td><%= f.text_field :title %></td>
    </tr>
    <tr>
      <th><%= f.label :start_at,"開始日" %></th>
      <td><%= f.date_field :start_at %></td>
    </tr>
    <tr>
      <th><%= f.label :stop_at,"終了日" %></th>
      <td><%= f.date_field :stop_at %></td>
    </tr>
    <tr>
      <th><%= f.label :allday,"終日" %></th>
      <td>
        <%= check_box_tag :test1 %>
        <%= label_tag :test1, "終日の場合はチェックを入れます" %>
      </td>
    </tr>
    <tr>
      <th><%= f.label :postmemo ,"スケジュールメモ" %></th>
      <td><%= f.text_area :postmemo %></td>
    </tr>
  </table>
  
  <div>
    <ul>
      <li><%= f.submit "スケジュールを新規登録する"%></li>
      <li><%= link_to "スケジュール一覧に戻る", :posts %></li>
    </ul>
  </div>
<% end %>